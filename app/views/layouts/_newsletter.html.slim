= form_tag Configuration['mailchimp_url'], id: 'mailee-form', method: 'post', class: "newsletter #{(defined?(custom_class) ? custom_class : '')}" do
  = email_field_tag 'EMAIL', nil, placeholder: t('sidebar.placeholders.email'), label: 'email', class: 'newsletter-input newsletter-input-footer'
  = submit_tag t('sidebar.buttons.newsletter'), class: 'newsletter-submit'