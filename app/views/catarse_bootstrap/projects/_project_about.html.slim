iframe src="#{@project.display_video_embed_url}" class="embedly-embed" width="100%" height="379" frameborder="0" allowFullScreen

ul.project-share.no-mobile
  li
    #facebook_share = render_facebook_like title: @project.name, href: project_by_slug_url(@project.permalink, locale: I18n.locale)
  li
    #twitter_share= render_twitter(url: project_by_slug_url(permalink: @project.permalink), title: @project.name)
  li
    = link_to t('.embed'), '#embed', id: 'embed_link', class: 'link embed'

.project-about
  .project-channel-banner.no-mobile
    - @project.channels.each do |channel|
      .w-row
        .w-colw-col-2
          .project-channel-banner-thumbnail
            = image_tag channel.users.first.display_image, title: channel.name
        .w-col.w-col-6
          .project-channel-banner-description
            = "Este projeto faz parte do Canal"
            = channel.name
            = link_to "Conhe√ßa o Canal", root_url(subdomain: channel.permalink), class: 'alt-link'
        .w-col.w-col-4
          - if channel.has_subscriber?(current_user)
            = link_to channels_subscriber_path, {method: :delete, class: "bt-large bt-small bt-dark bt-channel-project-banner"} do
              .stop_following= t('channels.unfollow')
          - else
              = link_to t('channels.follow'), channels_subscriber_path, class: [:button, :medium, :negative], title: t('channels.follow')
          p.project-channel-banner-followers
            = t('channels.subscribed', count: channel.channels_subscribers.size)

  p.headline.project-about-highlight = @project.headline
  = link_to "Leia mais", about_mobile_project_path(@project), class: "alt-link fontsize-small read-more-link"
  .no-mobile
    p.fontsize-base
      = @project.about_html.html_safe
