- content_for :title, t('.page-title')

= render 'shared/header_big'
= render 'shared/feedback'

.page-header
  .w-container.no-responsive
    .fontsize-largest.u-text-center = t('.title')

    - statistics = Statistics.first
    .w-row.stats-send-project
      .w-col.w-col-4.column-stats-submit
        .fontsize-jumbo.text-success = number_to_human(statistics.total_contributors)
        p.fontsize-base = t('.header.people')
      .w-col.w-col-4.column-stats-submit
        .fontsize-jumbo.text-success = number_to_human(statistics.total_projects_success)
        p.fontsize-base = t('.header.success')
      .w-col.w-col-4.column-stats-submit
        .fontsize-jumbo.text-success = number_to_human(statistics.total_contributed)
        p.fontsize-base = t('.header.money')

    .w-row
      .w-col.w-col-8.w-col-push-2.bt-center-header
        = link_to t('.learn-more'), '#learn', class: 'button bt-medium bt-aprenda'
        span = "ou"
        = link_to t('.submit'), new_project_path, class: 'button bt-medium bt-rascunhooff'

#learn
  .w-container.no-responsive
    .w-row.row-infosline
      .w-col.w-col-6.column-images-center
        = image_tag "catarse_bootstrap/how-it-works/inscreva-seu-projeto.png", class: "img-envie-01"
      .w-col.w-col-6
        .headline = t('.start.title')
        p.fontsize-base = t('.start.content')
        = link_to t('.start.link'), 'http://suporte.catarse.me/hc/pt-br/sections/200406978-Realizadores-Primeiros-passos', class: "alt-link fontsize-base", target: '_blank'

    .w-row.row-infosline
      .w-col.w-col-6
        .headline = t('.people.title')
        p.fontsize-base = t('.people.content')
        = link_to t('.people.link'), 'http://blog.catarse.me/quantos-apoiadores-eu-preciso-para-alcancar-a-meta-do-meu-projeto/', class: 'alt-link fontsize-base', target: '_blank'

      .w-col.w-col-6.column-images-center
        = image_tag "catarse_bootstrap/how-it-works/mobilze-interessados.png", class: "img-envie-02"

    .w-row.row-infosline
      .w-col.w-col-6.column-images-center
        = image_tag "catarse_bootstrap/how-it-works/trabalhe-muito.png", class: "img-envie-03"
      .w-col.w-col-6
        .headline = t('.work.title')
        p.fontsize-base = t('.work.content')
        = link_to t('.work.link'), 'http://blog.catarse.me/category/dicas/', class: 'alt-link fontsize-base', target: '_blank'

    .w-row.row-infosline
      .w-col.w-col-6
        .headline = t('.time.title')
        p.fontsize-base = t('.time.content')
        = link_to t('.time.link'), 'http://blog.catarse.me/nossa-taxa-de-servico-parte-1-de-onde-vem-e-pra-onde-vai-o-dinheiro-do-catarse/', class: 'alt-link fontsize-base', target: '_blank'
      .w-col.w-col-6.column-images-center
        = image_tag "catarse_bootstrap/how-it-works/tudo-ou-nada.png", class: "img-envie-04"

    .w-row
      .w-col.w-col-4.w-col-push-4
        = link_to t('.submit'), new_project_path, class: 'btn btn-large'

= render 'shared/footer_big'
