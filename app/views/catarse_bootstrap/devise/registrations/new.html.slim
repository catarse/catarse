= content_for :title, t('pages.sign_up.titles.site')

= render 'devise/shared/header'

.row
  .large-5.large-centered.columns
    .box.login-box.animated.fadeIn
      h2.text-center= t 'pages.sign_up.titles.header'
      p.text-center.register_link
        = t 'pages.sign_up.have_account_html', link: link_to(t('pages.sign_up.links.login'), new_user_session_path)
      hr

      .large-11.columns.large-centered
        = link_to t('pages.sign_up.form.inputs.facebook'), user_omniauth_authorize_path(provider: :facebook, locale: nil), class: [:button, :facebook, 'large-12', 'columns']

        .separator
          p
            = t('or')

      .clearfix

      .large-11.large-centered.columns
        = simple_form_for(resource, as: resource_name, url: sign_up_path) do |form|
          = render 'devise/shared/alert'

          = form.input :name, as: :string, label: t('pages.sign_up.form.labels.name')

          = form.input :email, as: :email

          = form.input :password, as: :password, label: t('pages.sign_up.form.labels.password'), hint: t('pages.sign_up.form.hint.password_length'), wrapper_html: { class: 'password' }

          .show-password
            = check_box_tag :show_password
            = label_tag :show_password, t('pages.sign_up.form.labels.show_password')

          = form.input :newsletter, as: :boolean, input_html: { checked: true }, label: t('pages.sign_up.form.labels.newsletter'), wrapper_html: { class: 'newsletter' }

          .large-10.columns.large-centered
            = form.submit t('pages.sign_up.form.inputs.submit'), class: 'button action'

      .clearfix
