script type="text/template" id="empty_backers_template"
  p= t('.empty')

script type="text/template" id="backer_template"
  .backer
    | <% if(anonymous) { %>
    img src="/images/user.png" class="backer_avatar"
    .back_info
      p#text
        em.anon=" #{t('.anonymous_backer')}"
      p#confirmed
        | <%= confirmed_at %>
      p#backed= t('.anonymous_description')
    | <% } else { %>
    a href="<%= user['url'] %>"
      img src="<%= user['image'] %>" class="backer_avatar"
    .back_info
      p#text
        a href="<%= user['url'] %>"
         | <%= user['medium_name'] %>
      p#confirmed
        | <%= confirmed_at %>
      p#backed
        | <%= user['backs_text'] %>
    | <% } %>
    - if current_user and (current_user == @project.user or current_user.admin)
      p.reward
        = "#{t('activerecord.attributes.backer.value')}: "
        | <%= display_value %> .
        = " #{t('activerecord.attributes.user.email')}: "
        | <% if(user['email']) { %>
        | <%= user['email'] %>
        | <% } else { %>
        | &nbsp;
        = t('not_informed')
        |.
        | <% } %>
        br
        | <% if (reward) { %>
        | &nbsp;
        = "#{t('activerecord.models.reward')}: "
        | <%= reward['display_minimum'] %> - <%= reward['medium_description'] %>
        | <% } else { %>
        | &nbsp;
        = t('.no_reward')
        | <% } %>
    .clear


  / |<%= confirmed_at %>
  / |<% if(anonymous) { %>
  / img src="/images/user.png" class="user"
  / | &nbsp;
  / = t('.anonymous_backer')
  / = image_tag "badge.#{I18n.locale}.png", :class => "badge"
  / p= t('.anonymous_description')
  / | <% } else { %>
  / a href="<%= user['url'] %>"
  /   img src="<%= user['image'] %>" class="user"
  /   | <%= user['medium_name'] %>
  /   = image_tag "badge.#{I18n.locale}.png", :class => "badge"
  / p
  /   | <%= user['backs_text'] %>
  / | <% } %>
