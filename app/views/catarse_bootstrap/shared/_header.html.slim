header.row
  .large-2.columns
    = link_to root_url(host: Configuration[:base_domain] || request.domain), :class => 'logo', :title => Configuration[:company_name] do
      = image_tag 'catarse/logo.png'
  .large-10.columns
    nav.nav-horizontal
      ul
        li.nav-item
          = link_to t('layouts.header.submit'), guidelines_start_path, :class => 'action-link'
        li.nav-item
          = link_to t('layouts.header.help'), "#{Configuration[:support_forum]}", id: 'guidelines_header_modal', :class => 'standard-link', target: '_blank'
        li.nav-item
          = link_to t('channels.footer.how_channels_work'), 'http://blog.catarse.me/conheca-os-canais-do-catarse/', title: t('channels.footer.how_channels_work'), :class => 'standard-link', target: '_blank'
        li.nav-item
          = mail_to @profile.email, t('channels.footer.contact'), title: t('channels.footer.contact'), :class => 'standard-link', target: '_blank'
        - if current_user
          li.nav-item
            = link_to '#', class: 'user-menu' do
              = image_tag(current_user.display_image, :size => "40x40", :class => 'user-avatar')
            ul.dropdown.user
              li= link_to t('layouts.header.profile'), current_user
              li
                = link_to t('layouts.user.my_credits'), user_path(current_user, anchor: 'credits')
                .small
                  | (#{current_user.display_credits})
              - if current_user.admin?
                li.divider
                - for menu, path in Adm::BaseController.menu do
                  li= link_to menu, path
              - if current_user.trustee?
                li.divider
                - for menu, path in Channels::Adm::ProjectsController.menu do
                  li.channel_trustee= link_to menu, path
              li.divider= link_to t('layouts.user.logout'), destroy_user_session_path, method: :delete
        - else
          li.nav-item
            = link_to t('layouts.header.signup'), new_user_registration_path, :class => 'standard-link'
          li.nav-item
            = link_to t('layouts.header.signin'), new_user_session_path, :class => 'standard-link'
