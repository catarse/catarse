- if current_user
  #nearOfData data-state="#{current_user.address_state}"

#page_content
  .container
    .main
      .section_header
        .original_title
          h1= t('.title')
          h4= t('.subtitle')

      #explore_results[data-projects-path=projects_path]
        .follow-category
          .category-info
            h3 Category-name
          .category-follow
            p.following 
              span.count
                | 0
              '  #{t('.following')}
            a href="javascript:(void);" class='button small action follow-btn'
              = t('.follow')
            a href="javascript:(void);" class='button small negative unfollow-btn'
              = t('.unfollow')

          .clearfix
        .results &nbsp;
        .clearfix
        #loading= image_tag "loading.gif"

    aside.main-sidebar.sidebar-discover
        section.main-sidebar-division
          h2.title= t('.quick_explore')
          ul
            li
              a.explore-link[href='#recommended']
                = t('.recommended')
            li
              a.explore-link[href='#in_funding']
                = t('.in_funding')
            li
              a.explore-link[href='#expiring']
                = t('.expiring')
            li
              a.explore-link[href='#recent']
                = t('.recent')
            li
              a.explore-link[href='#successful']
                = t('.successful')
            - if current_user
              li
                a.explore-link[href="#near_of/#{current_user.address_state}"]
                  = t('.near')

        - unless @categories.empty?
          section.main-sidebar-division
            h2.title= t('.categories')
            ul
              - @categories.each_with_index do |category, index|
                li
                  a.explore-link[
                    href="#by_category_id/#{category.id}" 
                    data-name=(params[:locale] == 'en' ? category.name_en : category.name_pt)
                    data-categoryid=category.id
                    data-isfollowing=(current_user.try(:following_this_category?, category.id) ? 'true' : 'false') 
                    data-followpath=subscribe_category_path(category)
                    data-unfollowpath=unsubscribe_category_path(category)
                    data-totalfollowers=category.users.count
                    ]
                    .bootstrap-twitter
                      = category
                      ' 
                      span.label= category.total_online_projects

    .clearfix
