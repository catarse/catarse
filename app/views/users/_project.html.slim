script type="text/template" id="empty_user_project_template"
  p= t('.empty')

script type="text/template" id="user_project_template"
  .profile_my_projects
      p
      .project
        .box
          p.black_box Lorem Ipsum Dolor
          = image_tag 'redesign/project_image210x172.jpg', :class => 'cover'
  
          h4
            a href="<%= url %>"
              | <%= name %>
          p.author== "#{t('projects.project.by')} <%= user['name'] %>"
          p.where
            | <%= user['address_city'] %>
          p.description
            | <%= headline %>
          .status_bar
            .progress style="width: <%= display_progress %>%;"
          ul
            li
              h6 <%= time_to_go['time'] %> <%= time_to_go['unit'] %>
              p <%= remaining_text %>
            li
              h6 <%= progress %>%
              p= t('projects.project.backed')
            li
              h6 <%= pledged %>
              p= t('projects.project.reached')
          = link_to 'Me lembre deste projeto', '#', :class => 'follow_project'
  
      .project_about        
        .about_my_project
          p
