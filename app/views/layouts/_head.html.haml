%head
  %meta{:charset => 'utf-8'}
  %meta{:name => "robots", :content => "index, follow"}
  %meta{:name => "author", :content => "Softa"}
  = yield :meta_tags
  %title
    - if @title
      == #{@title}#{' · ' if @title}#{t('site.name')}
    - else
      == #{yield :title} · #{t('site.name')}

  = stylesheet_link_tag 'le-frog/jquery-ui-1.8.6.custom.css', :media => 'screen, projection'
  = stylesheet_link_tag 'screen.css', :media => 'screen, projection'
  /[if lt IE 9]
    = javascript_include_tag "http://html5shiv.googlecode.com/svn/trunk/html5.js"
  = javascript_include_tag 'app/loader'
  = csrf_meta_tag
  %link{ :rel => 'shortcut icon', :href => "/images/favicon.ico" }
  = render '/layouts/analytics'
  = render "/layouts/uservoice"
  = yield :js_templates
