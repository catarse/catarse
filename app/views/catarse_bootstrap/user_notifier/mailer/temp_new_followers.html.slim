          table align="left" border="0" cellpadding="0" cellspacing="0" style="max-width:100%;min-width:100%;border-collapse:collapse" width="100%" 
            tbody
              tr
                td style="padding-top:0;padding-right:18px;padding-bottom:9px;padding-left:18px;word-break:break-word;color:#3f4752;font-family:Helvetica;font-size:16px;line-height:150%;text-align:center" valign="top" 
                  = link_to follow_fb_friends_url(user_email: user.email, user_token: user.authentication_token, ref: 'new_followers', utm_campaign: 'new_followers', utm_medium: 'email', utm_source: 'notification', anchor: 'followers'), style: "color:#2baadf;font-weight:normal;text-decoration:underline", target: '_blank' do
                    strong="E mais #{followers.count - 10} novos seguidores nessa lista."

