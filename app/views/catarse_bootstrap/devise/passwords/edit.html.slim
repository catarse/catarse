= content_for :title, t('pages.reset_password.titles.site')

= render 'devise/shared/header'

.row
  .large-5.large-centered.columns
    .box.login-box.animated.fadeIn
      h2.text-center= t 'pages.reset_password.titles.header'
      hr

      .large-11.large-centered.columns
        = form_for(resource, as: resource_name, url: password_path(resource_name), html: {method: :put}) do |f|
          = render 'devise/shared/alert'
          = f.hidden_field :reset_password_token
          div.password
            = f.label :password, t('pages.reset_password.form.labels.password')
            = f.password_field :password, required: true
            span.hint
              = t('pages.sign_up.form.hint.password_length')
            .show-password
              = check_box_tag :show_password
              = label_tag :show_password, t('pages.sign_up.form.labels.show_password')

          div.password
            = f.label :password_confirmation, t('pages.reset_password.form.labels.password_confirmation')
            = f.password_field :password_confirmation, required: true

          .large-7.columns.large-centered
            = f.submit t('pages.reset_password.form.inputs.submit'), class: [:button, :action, 'large-12', 'columns']
